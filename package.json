{
  "name": "micro-rest-boilerplate",
  "description": "Starter project for RESTful Micro API",
  "version": "0.0.1",
  "author": {
    "name": "Khang Huynh",
    "email": "khanghuynh92@gmail.com"
  },
  "main": "src/index.js",
  "engines": {
    "node": ">=9"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/khanghuynh/reader-admin-api.git"
  },
  "scripts": {
    "test": "eslint . --ignore-path .gitignore",
    "start": "micro-dev -p 9000",
    "serve": "micro -p $PORT"
  },
  "dependencies": {
    "dotenv": "^5.0.1",
    "http-status-codes": "^1.3.0",
    "joi": "^13.0.2",
    "micro": "latest",
    "micro-joi": "^3.1.0",
    "microrouter": "^3.0.0",
    "mongoose": "5.0.12",
    "mongoose-deep-populate": "^3.0.0",
    "mongoose-unique-validator": "2.0.0",
    "node-fetch": "^2.1.2"
  },
  "license": "MIT",
  "devDependencies": {
    "eslint": "4.19.1",
    "eslint-config-airbnb": "16.1.0",
    "eslint-plugin-import": "2.10.0",
    "eslint-plugin-jsx-a11y": "6.0.3",
    "eslint-plugin-react": "7.7.0",
    "micro-dev": "latest"
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "extends": "airbnb",
    "rules": {
      "no-underscore-dangle": [
        2,
        {
          "allow": [
            "_id",
            "__v"
          ]
        }
      ],
      "no-param-reassign": [
        1,
        {
          "props": false
        }
      ],
      "func-names": [
        "error",
        "never"
      ],
      "no-await-in-loop": 0,
      "no-restricted-syntax": [
        "error",
        "WithStatement",
        "BinaryExpression[operator='in']"
      ],
      "linebreak-style": 0,
      "no-else-return": 0
    }
  }
}
